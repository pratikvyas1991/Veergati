<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:text="Datbase Manager"
        android:textSize="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



    <TextView
        android:text="Transactions"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_load_trasaction"
            android:text="Load"
            android:layout_margin="5dp"
            android:background="@color/colorAccent"
            android:textColor="@color/whitecolour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_insert_trasaction"
            android:text="Insert"
            android:layout_margin="5dp"
            android:background="@color/colorAccent"
            android:textColor="@color/whitecolour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_upload_server"
            android:text="Upload to Server"
            android:layout_margin="5dp"
            android:background="@color/colorAccent"
            android:textColor="@color/whitecolour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>



    <TextView
        android:text="Stocks"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_load_stock"
            android:text="Load"
            android:layout_margin="5dp"
            android:background="@color/colorAccent"
            android:textColor="@color/whitecolour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_insert_stock"
            android:text="Insert"
            android:layout_margin="5dp"
            android:background="@color/colorAccent"
            android:textColor="@color/whitecolour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>